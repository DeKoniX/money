<%= simple_form_for @person, :html => { :class => 'form-horizontal' }, remote: true do |f| %>
  <%= f.input :name, label: 'Имя должника: ' %>
  <%= simple_form_for [Person, @debts] do |f| %>
    <%= f.input :m, label: 'Сумма: ' %>
    <%= f.input :desc, label: 'Описание: ', as: :string %>
  <%= f.submit 'Сохранить' %>
  <% end %>
<% end %>
