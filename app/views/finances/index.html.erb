<% if signed_in? %>

  <% @wallets.each do |wallet| %>
    <span class="wallet">
      <%= link_to "Новое изменение, кошелёк '#{wallet.name}'", new_finance_path(wallet_id: wallet) %></span>
    <span class="right"><%= link_to "Редактировать ", edit_user_wallet_path(current_user, wallet) %>
      <%= link_to (image_tag 'delete.png'), user_wallet_path(current_user, wallet), method: :delete, data: { confirm: 'Вы уверены? (Это полностью сотрет ваши данные по данному кошельку)' } %></span>
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>Количество</th>
          <th>Описание</th>
          <th>Когда</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <% current_finance(wallet).each do |finance| %>
        <tr class="<%= finance.m < 0 ? 'error' : 'success' %>">
          <td class="money<%= ' minus 'if finance.m < 0 %>"><%= finance.m %></td>
          <td><%= finance.desc %></td>
          <td><%= finance.updated_at.to_date %></td>
          <td><%= link_to 'Редактировать', edit_finance_path(finance, wallet_id: wallet)%> </td>
          <td><%= link_to 'Удалить', finance, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
    </table>
    <%= will_paginate current_finance(wallet), param_name: :"page_#{wallet.id}" %>

    <h2 class="money <%= ' minus' if sumTable(wallet) < 0 %>"><%= sumTable(wallet) %></h2>
    <hr>
  <% end %>
  <% if @wallets == [] %>
    <h3>Извените. У вас кошельков сейчас нет! <%= link_to 'Создайте', new_user_wallet_path(current_user) %> новый кошелек</h3>
  <% else %>
    <h4><%= link_to "Создать новый кошелёк.", new_user_wallet_path(current_user) %></h4>
  <% end %>
<% end %>
