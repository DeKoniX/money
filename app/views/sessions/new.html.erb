<% provide(:title, "Sign in") %>
<h1>Login</h1>

<%= form_for(:session, url: sessions_path) do |f| %>
    <ul><%= f.label :email, "E-Mail" %>: <%= f.text_field :email %></ul>

    <ul><%= f.label :password, "Пароль" %>: <%= f.password_field :password %></ul>

  <%= f.submit "Login" %>
<% end %>

<p>Новый пользователь? <%= link_to "Зарегестрируйтесь!", signup_path %></p>
